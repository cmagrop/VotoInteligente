<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_base"
    android:orientation="vertical"
    tools:context=".ActualizacionPass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto"
            android:text="Actualización de datos"
            android:textColor="#FFFFFF"
            android:textSize="26dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|bottom|center_vertical"
            android:src="@drawable/actualizar_datos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Ingrese su nuevo correo electrónico"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/actualizar_correo_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/edittext_redondeado"
            android:gravity="center"
            android:hint="Ingrese correo"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:textColorHint="#686868"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Ingrese nuevamente su correo electrónico"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/confirm_actualizar_correo_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/edittext_redondeado"
            android:gravity="center"
            android:hint="Ingrese correo"
            android:padding="5dp"
            android:textColorHint="#686868"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
        <Button
            android:id="@+id/guardar_cambios_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_redondeado"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_marginTop="40dp"/>

    </LinearLayout>




</LinearLayout>