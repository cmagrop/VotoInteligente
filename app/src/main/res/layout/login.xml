<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login_layout"
        android:background="@drawable/background_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/login_icono" />

            <EditText
                android:id="@+id/login_edt_usuario"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittext_redondeado"
                android:drawableLeft="@drawable/ic_action_nameaaccount"
                android:drawablePadding="50dp"
                android:elevation="20dp"
                android:hint="Ingrese su RUT"
                android:paddingHorizontal="20dp"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textColorHint="#50FFFFFF"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/login_edt_pass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_redondeado"
                android:drawableLeft="@drawable/ic_action_namepass"
                android:drawablePadding="50dp"
                android:elevation="20dp"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:paddingHorizontal="20dp"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textColorHint="#50FFFFFF"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/login_btn_ingresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_redondeado"
                android:elevation="20dp"
                android:onClick="capturaLogin"
                android:paddingHorizontal="20dp"
                android:text="Ingresar"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/login_text_recup_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:text="@string/rec_contr"
                android:textColor="#50FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_img1"
                android:layout_width="@dimen/tam_foto"
                android:layout_height="@dimen/tam_foto"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/tam_foto"
                android:background="#fff"
                android:padding="10dp"
                android:src="@drawable/amuch" />

            <ImageView
                android:id="@+id/login_img2"
                android:layout_width="@dimen/tam_foto"
                android:layout_height="@dimen/tam_foto"
                android:layout_marginTop="20dp"

                android:background="#fff"
                android:scaleType="fitXY"
                android:src="@drawable/servel" />

        </LinearLayout>

    </LinearLayout>
